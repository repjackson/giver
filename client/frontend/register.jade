template(name='register')
    .register-body.ui.padded.stackable.grid
        .centered.row
            .ten.wide.column
                .ui.center.aligned.large.white.header
                    | Cheerful Giving Starts Here
                    hr.hr1
                .ui.center.aligned.white.header
                    | A Joyful Giver account for your nonprofit or place of worship connects your organization with the world&apos;s most generous giving community.
        .two.column.row
            .column
                .ui.circular.segment.donor
                    // img(src='/image/donor-img.png')
                    .ui.red.large.icon.header
                        i.red.large.heartbeat.icon
                        .content
                            |Donor
                            .ui.divider
                            .sub.header I'm an individual and want to give to an organization through Joyful Giver.
                    .block
                        a(href="/register/giver")
                            .ui.big.circular.red.button(type='button') Register
                    a(href='/login') Already have an account?
            .column
                .ui.circular.segment.org
                    .ui.red.large.icon.header
                        i.university.large.red.icon
                        .content
                            |Organization
                            .ui.divider
                            .sub.header I represent a Non-Profit or Faith-Based Organization and want my members to give through Joyful Giver.
                    .block
                        a(href="{{pathFor 'register_church'}}")
                            .ui.big.circular.red.button(type='button') Get Started
                    a(href='/login') Already have an account?
        .centered.row
            .ten.wide.center.aligned.column
                h3.ui.white.header Safe.  Secured.  Trusted.
                .ui.centered.small.images
                    img.ui.image(src='/images/stripe.png')
                    img.ui.image(src='/images/ssl.png')
                    a(href='https://www.bbb.org/dallas/business-reviews/financial-services/joyful-giver-in-plano-tx-90907663#bbbseal' target='_blank')
                        img.ui.image(src='/images/bbb.svg')

template(name='register_giver')
    .ui.stackable.padded.grid.register-body
        .centered.row
            .six.wide.column
                .ui.segment
                    .ui.center.aligned.header
                        i.user.plus.icon
                        | User Account Registration
                    p
                        | By registering an account with Joyful Giver you agree to our
                        u
                            b
                                a#tosModal.undl(href='#') Terms of Service
                        |  and the
                        u
                            b
                                a.undl(href='https://stripe.com/connect/account-terms' target='_blank') Stripe Connected Account Agreement
                        | .
                        | You understand that Stripe will be processing donations on your behalf through the Joyful Giver platform.
                    p
                        | We respect your right to privacy. You can view our privacy policy
                        u
                            b
                                a#privacyPolicyModal.undl(target='_blank' href='#') here.
            .six.wide.column
                .ui.segment
                    .ui.large.form
                        .field
                            label Name
                            input#lname.form-control(type='text' name='name' placeholder='John Smith' required='')
                        .field
                            label Email
                            input#lemail.form-control(type='text' name='email' placeholder='name@yourchurch.com' required='')
                        .field
                            label Phone
                            input#phone.form-control(type='text' name='phone' placeholder='xxx-xxx-xxxx' required='')
                        .field
                            label Password
                            input#password.form-control(type='password' name='password' placeholder='Password' required='')
                        .field
                            #register.ui.primary.fluid.large.button Agree & Register

        #tosModalpopup.ui.modal.fade
            i.close.icon
            .header Terms of Service
            .scrolling.content
                +tos
            .actions
                button.ui.fluid.ok.button(type='button' data-dismiss='modal') Close

        #privacyPolicyDisplayModal.ui.modal.fade
            .header Privacy Policy
            .content
                +privacyPolicyDisplay
            .actions
                button.ui.fluid.ok.button(type='button' data-dismiss='modal') Close



