        .modal-dialog.modal-lg(style='width: 80%;')
            .modal-content
                .color-line
                .modal-header
                    h4.modal-title Terms of Service
                .modal-body
                    +tos
                .modal-footer
                    button.btn.btn-default(type='button' data-dismiss='modal') Close

