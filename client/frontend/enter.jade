        .panel-body.text-center
            h3.font-light.m-b-xs
                b Select your role
    .animate-panel.bluegraybg
        .login-container
            .row
                .col-md-12
                    .hpanel
                        .panel-body
                            .col-lg-6.border-right
                                p
                                    .btn-top-space.text-center.btn1-div
                                        a.btn.btn-1.roleSelect(href='#' data-role='Organization') Organization
                            .col-lg-6
                                p
                                    .btn-top-space.text-center.btn1-div
                                        a.btn.btn-1.roleSelect(href='#' data-role='Giver') Giver



template(name='reset_password')
    .color-line
    .back-link
        a.btn.btn-primary(href="{{pathFor route='front'}}") Back to Home Page
    .normalheader.transition.animated.fadeIn
        .panel-body.text-center
            h3.font-light.m-b-xs
                b Reset your password?
    .animate-panel.bluegraybg
        .login-container
            .row
                .col-md-12
                    .hpanel
                        .panel-body
                            form#reset_passwordForm
                                if reset_password
                                    .ui.input
                                        label.control-label(for='Password') Password
                                        input#reset_passwordPassword.form-control.validationRequired.validationEqualTo(type='password' placeholder='password' name='password')
                                    .ui.input
                                        label.control-label(for='CPassword') Confirm Password
                                        input#reset_passwordPasswordConfirm.form-control.validationRequired.validationEqualTo(type='password' euqalto='#reset_passwordPassword' placeholder='confirm password' name='confirmpassword')
                                button.btn.btn-success.btn-block(type='submit') Submit
                                a(href='/login') Sign-in
