template(name='array_edit')
    .field
        label #{key}
        if brick_value
            each brick_value
                .ui.basic.label
                    i.remove.link.icon.remove_element
                    |#{this}
        .ui.icon.input
            input.new_element(type='text')
            i.plus.icon


template(name='array_view')
    each brick_value
        .ui.label #{this}



template(name='children_edit')
    .ui.small.header #{label}
    .ui.segment
        if editing
            .ui.button.add_child
                i.plus.icon
                |child
        each children
            +child


template(name='youtube_edit')
    .ui.labeled.fluid.input
        .ui.label youtube id
        input.youtube_id(type='text' value=brick_meta.youtube_id)
    iframe(width='560' height='315' src="https://www.youtube.com/embed/#{brick_value}" frameborder='0' allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')

